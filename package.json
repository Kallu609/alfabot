    "cheerio": "^1.0.0-rc.2",
    "dateformat": "^3.0.3",
    "dayjs": "^1.8.12",
    "dotenv": "^6.1.0",
    "json5": "^2.1.0",
    "knex": "^2.4.0",
    "lodash": "^4.17.13",
    "node-fetch": "^2.2.0",
    "node-schedule": "^1.3.0",
    "node-telegram-bot-api": "^0.30.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.10.3",
    "parse-duration": "^0.1.1",
    "pg": "^7.5.0",
    "query-string": "^6.2.0",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.8",
    "react-dom": "^16.8.6",
    "react-geosuggest": "^2.12.0",
